<header>
  <h1>Listing Urls</h1>
</header>

<%= will_paginate %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Original</th>
    <th>Tiny Url</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @urls.each do |url| %>
      <tr>
        <td><%= url.original %></td>
        <td><%= url.link.try :identifier %></td>
        <td><%= link_to 'Show', url, class: "btn btn-primary btn-lg" %></td>
        <td><%= link_to 'Edit', edit_url_path(url), class: "btn btn-primary btn-lg" %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-lg" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_url_path %>
